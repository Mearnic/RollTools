<Window x:Class="RollTools.TagSetting"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:RollTools"
        mc:Ignorable="d"
        Title="列表池" Height="400" Width="600">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="21*"/>
            <ColumnDefinition Width="33*"/>
            <ColumnDefinition Width="539*"/>
        </Grid.ColumnDefinitions>
        <DockPanel LastChildFill="False" Grid.ColumnSpan="3" Margin="0,0,0.001,0" >
            <Grid DockPanel.Dock="Top">
                <StackPanel HorizontalAlignment="Center" Orientation="Horizontal" Margin="245,0,244.999,10">
                    <Label x:Name="poll_title" Content="" HorizontalAlignment="Center"  VerticalAlignment="Center" />
                </StackPanel>
            </Grid>
            <Grid DockPanel.Dock="Left" Width="400">
                <StackPanel HorizontalAlignment="Right" Margin="0, 0, 0, 0">
                    <ListView x:Name="tagListView" Width="380" Height="300">
                        <ListView.View>
                            <GridView>
                                <GridViewColumn>
                                    <GridViewColumn.Header>
                                        <CheckBox VerticalContentAlignment="Center" Click="selectAll" />
                                    </GridViewColumn.Header>
                                    <GridViewColumn.CellTemplate>
                                        <DataTemplate>
                                            <CheckBox IsChecked="{Binding IsChecked}" Tag="{Binding Id}"></CheckBox>
                                        </DataTemplate>
                                    </GridViewColumn.CellTemplate>
                                </GridViewColumn>
                                <GridViewColumn Header="名称" Width="200">
                                    <GridViewColumn.CellTemplate>
                                        <DataTemplate>
                                            <TextBox x:Name="ItemBox" Text="{Binding Name}" TextAlignment="Center" Width="185" VerticalContentAlignment="Center" Height="40"></TextBox>
                                        </DataTemplate>
                                    </GridViewColumn.CellTemplate>
                                </GridViewColumn>
                                <GridViewColumn Header="状态">
                                    <GridViewColumn.CellTemplate>
                                        <DataTemplate>
                                            <Label Content="{Binding IsUse}" />
                                        </DataTemplate>
                                    </GridViewColumn.CellTemplate>
                                </GridViewColumn>
                                <GridViewColumn Header="是否已抽取">
                                    <GridViewColumn.CellTemplate>
                                        <DataTemplate>
                                            <Label Content="{Binding IsRolled}" />
                                        </DataTemplate>
                                    </GridViewColumn.CellTemplate>
                                </GridViewColumn>
                            </GridView>
                        </ListView.View>
                    </ListView>
                </StackPanel>
            </Grid>
            <DockPanel LastChildFill="False" DockPanel.Dock="Right" Width="184.667" Margin="0, 0, 0, 20">
                <Grid DockPanel.Dock="Top">
                    <StackPanel HorizontalAlignment="Center">
                        <StackPanel HorizontalAlignment="Center" Height="50" Orientation="Horizontal" VerticalAlignment="Top">
                            <Button Content="添加" Height="40" Width="75" Click="addTag"></Button>
                            <Button Content="删除" Height="40" Width="75" Click="deleteSelected"></Button>
                        </StackPanel>
                        <StackPanel HorizontalAlignment="Center" Height="50" Orientation="Horizontal" VerticalAlignment="Top">
                            <Button Content="启用" Height="40" Width="75" Click="openSelected"></Button>
                            <Button Content="禁用" Height="40" Width="75" Click="closeSelected"></Button>
                        </StackPanel>
                    </StackPanel>
                </Grid>
                <Grid DockPanel.Dock="Bottom">
                    <StackPanel HorizontalAlignment="Center" Height="50" Orientation="Horizontal" >
                        <Button x:Name="btnSave" Content="保存" Height="40" Width="75" Click="saveChange"></Button>
                        <Button Content="返回" Height="40" Width="75" Click="closeWindow"></Button>
                    </StackPanel>
                </Grid>

            </DockPanel>
        </DockPanel>

    </Grid>
</Window>
